@page "index/{id:int?}"
@model Activities.Pages.ActivitiesApp.IndexModel

@{
    ViewData["Title"] = "Activities";
}

<a asp-page="create" class="btn btn-primary mt-4">
    <i class="bi bi-pencil-square"></i>
    &nbsp; Create Activity
    </a>


@if(Model.SingleActivity != null)
{
    <div class="activities mt-4">
        <div>
            <h3>Name</h3>
        </div>
        <div>
            <h3>Location</h3>
        </div>
        <div>
            <h3>Date</h3>
        </div>
        <div>
            <h3>Edit/Delete</h3>
        </div>
       
            <div>
                <p>@Model.SingleActivity.Name</p>
            </div>
            <div>
            <p>@Model.SingleActivity.Location</p>
            </div>
            <div>
            <p>@Model.SingleActivity.Date.ToShortDateString()</p>
            </div>
            <div>
            <a asp-page="Edit" asp-route-id="@Model.SingleActivity.Id" class="btn btn-sm btn-secondary">
                <i class="bi bi-pencil-square"></i>
                &nbsp;Edit
            </a>
            <a asp-page="Delete" asp-route-id="@Model.SingleActivity.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> &nbsp;Delete</a>
            </div>
       
    </div>
}
else if(Model.Activities.Count() > 0)
{
    <h2 class="mt-4">All Activities</h2>
    <div class="activities mt-4">
        <div>
            <h3>Name</h3>
        </div>
        <div>
            <h3>Location</h3>
        </div>
        <div>
            <h3>Date</h3>
        </div>
        <div>
            <h3>Edit/Delete</h3>
        </div>
        @foreach (var obj in Model.Activities)
        {
            <div>
                <p>@obj.Name</p>
            </div>
            <div>
                <p>@obj.Location</p>
            </div>
            <div>
                <p>@obj.Date.ToShortDateString()</p>
            </div>
            <div>
                <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-secondary btn-sm">
                    <i class="bi bi-pencil-square"></i>
                    &nbsp;Edit
                </a>
                <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> &nbsp;Delete</a>
            </div>
        }
    </div>
}
else
{
    <h1 class="mt-4">No Activities yet! 😮</h1>
}
